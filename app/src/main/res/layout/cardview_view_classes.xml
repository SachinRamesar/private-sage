<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/classesCardView"
    android:clickable="true"
    androidforeground="?android:attr/selectableItemBackground"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="50dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    cardview:cardCornerRadius="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/className"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="Class Name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="No. of Sessions: "
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/sessionsAmt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:text="N/A"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="No. of Students Registered:"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/studentAmt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="N/A"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="No. of Seats Available:"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/numSeatsAvailable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="N/A"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Class Description:"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/classDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="N/A"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text="Price" />

            <TextView
                android:id="@+id/dollarSign"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="$"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="N/A"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/enroll"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Enroll" />

        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>