<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sage">

    <application
        android:allowBackup="true"
        android:icon="@drawable/sage_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/sage_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sage">

        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.Register.Register" />
        <activity android:name=".view.Login.Login" />

        <activity
            android:name=".view.Class.ViewClasses"
            android:theme="@style/Theme.Sage.NoActionBar"/>

        <activity
            android:name=".view.Class.CreateClass"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/Theme.Sage.NoActionBar"/>

        <activity android:name=".view.ClassSession.ViewSessions"
            android:theme="@style/Theme.Sage.NoActionBar"/>

        <activity android:name=".view.subjectsTypeMenu.SubjectsTypeMenu"
            android:theme="@style/Theme.Sage.NoActionBar"/>

        <activity android:name=".view.subjectsMenu.SubjectsMenu"
            android:theme="@style/Theme.Sage.NoActionBar"/>


    </application>

</manifest>